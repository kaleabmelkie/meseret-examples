{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "module": "commonjs",
    "moduleResolution": "node",

    "pretty": true,
    "lib": ["es2018"],
    "target": "es5",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmitOnError": true,

    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,

    "alwaysStrict": true,
    "preserveConstEnums": true,
    "newLine": "lf"
  },

  "files": [
    "./src/app.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
